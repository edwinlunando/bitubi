.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-login
        .panel-heading
          .row
            .col-xs-6
              a#register-form-link.active href="#"  Masuk
            .col-xs-6
              = link_to 'Daftar', daftar_path
          hr/
        .panel-body
          .row
            .col-lg-12
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'register-form' }) do |f|
                = f.input :email, required: true, autofocus: true
                = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
                = f.button :submit, "Masuk"

