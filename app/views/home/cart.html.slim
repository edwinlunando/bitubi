                button.btn.btn-link.btn-xs type="button"
                  span.glyphicon.glyphicon-trash
        .panel-footer
          .row.text-center
            .col-xs-8
              h4.text-right
                | Total
                strong $50.00
            .col-xs-4
              = link_to 'Checkout', alamat_path, class: 'btn btn-success btn-block'
