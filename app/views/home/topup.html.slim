.container
  .row
    .col-md-3
      p Saldo kamu: #{ number_format(current_user.credit) }
    .col-md-9
      h1 Top Up
      = simple_form_for(@top_up, url: tambah_saldo_path) do |f|
        = f.input :name
        = f.input :amount
        = f.input :bank, collection: TopUp.bank_list, input_html: { class: 'selectize' }
        = f.submit 'Isi Saldo', class: 'btn btn-primary'



