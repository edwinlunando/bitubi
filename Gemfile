# Phone validation
gem 'phony_rails'
# Environment variable
gem 'dotenv-rails'
# Annotate all model
gem 'annotate'
# Global settings
gem 'rails-settings-cached', '~> 0.4.0'
gem 'activeadmin_settings_cached'
# AWS S3
gem 'aws-sdk', '< 2.0'
gem 'fog'
